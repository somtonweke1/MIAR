# Production Environment Configuration
# DO NOT commit actual values - use environment variables in Vercel/hosting
# ALL VALUES MUST BE SET IN HOSTING PLATFORM

NODE_ENV=production

# Application
NEXT_PUBLIC_APP_URL=https://miar-platform.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=

# API Keys
ALPHA_VANTAGE_API_KEY=
TWELVE_DATA_API_KEY=
PERPLEXITY_API_KEY=
NEWS_API_KEY=
GNEWS_API_KEY=

# Authentication
NEXTAUTH_URL=https://miar-platform.com
NEXTAUTH_SECRET=

# Error Tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Logging
LOG_LEVEL=warn

# Feature Flags (production - stable features only)
NEXT_PUBLIC_FEATURE_3D_VISUALIZATION=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AI_INSIGHTS=false
NEXT_PUBLIC_FEATURE_EXPERIMENTAL=false

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Redis (if using for caching/rate limiting)
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Monitoring & Analytics
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ANALYTICS=

# Security
ALLOWED_ORIGINS=https://miar-platform.com

# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Development Tools (disabled in production)
ANALYZE=false
