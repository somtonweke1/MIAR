# Staging Environment Configuration
# DO NOT commit actual values - use environment variables in Vercel/hosting

NODE_ENV=production

# Application
NEXT_PUBLIC_APP_URL=https://staging.miar-platform.com

# Database (set in Vercel/hosting environment)
DATABASE_URL=

# API Keys (set in Vercel/hosting environment)
ALPHA_VANTAGE_API_KEY=
TWELVE_DATA_API_KEY=
PERPLEXITY_API_KEY=
NEWS_API_KEY=
GNEWS_API_KEY=

# Authentication
NEXTAUTH_URL=https://staging.miar-platform.com
NEXTAUTH_SECRET=

# Error Tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Logging
LOG_LEVEL=info

# Feature Flags (staging can test new features)
NEXT_PUBLIC_FEATURE_3D_VISUALIZATION=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AI_INSIGHTS=true
NEXT_PUBLIC_FEATURE_EXPERIMENTAL=true

# Rate Limiting (more lenient in staging)
RATE_LIMIT_ENABLED=true

# Monitoring
NEXT_PUBLIC_ANALYTICS_ID=

# Development Tools
ANALYZE=false
